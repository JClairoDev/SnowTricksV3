{% set media = trick.media.first %}
<article class="trick-card">
     <header class="trick-card-header">
             <a href="{{ path('app_trick_show', {'slug': trick.slug}) }}">
                 {% if media %}
                  <img src="{{ asset('uploads/'~media.pictures) }}" alt="illustration du trick">
                 {% endif %}
             </a>
    </header>
         <div class="trick-card-content">
             <p>Trick : {{ trick.name }}</p>
             <p>Rider : {{ trick.userId.name }}</p>
            {% if app.user %}
                {% if trick.userId==app.user %}
                    {{ include('trick/_delete_form.html.twig') }}
                    <a href="{{ path('app_trick_edit',{'id': trick.id}) }}">
                        <button class="btn"><i class="btn fa fa-pencil" aria-hidden="true"></i></button>
                    </a>
                {% endif %}

            {% endif %}
        </div>
</article>