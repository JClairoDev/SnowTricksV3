
    {% set break = false %} {#// variable permettant l'arrêt de la boucle lorsqu'un media est trouvé pour éviter l'affichage intempestif#}
    {% for media in medias %}
            {% if media.trickId.id == trick.id and break == false %}
                <article class="trick-card">
                     <header class="trick-card-header">
                             <a href="{{ path('app_trick_show', {'id': trick.id}) }}">
                                  <img src="{{ asset('uploads/'~media.pictures) }}" alt="illustration du trick">
                             </a>
                    </header>
                    {{ trick.name }}
                    <div class="trick-card-content">
                     Rider : {{ trick.userId.name }}
                        {{ include('trick/_delete_form.html.twig') }}
                     <a href="{{ path('app_trick_edit',{'id': trick.id}) }}">
                         <i class="btn fa fa-pencil" aria-hidden="true"></i>
                     </a>

                 </div>
                </article>
            {% set break = true %}
            {% endif %}
    {% endfor %}