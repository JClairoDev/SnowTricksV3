<div class="form-container">

    {{ form_start(form, {'attr': {'class': 'my-form'}}) }}

    {{ form_row(form.name, {'attr': {'class': 'inside-form'}}) }}
    {{ form_row(form.description, {'attr': {'class': 'inside-form'}}) }}
    {{ form_row(form.video, {'attr': {'class': 'inside-form'}}) }}
    {{ form_row(form.categoryId, {'attr': {'class': 'inside-form'}}) }}
    {{ form_row(form.media, {'attr': {'class': 'inside-form'}}) }}

    <button class="btn">{{ button_label|default('Save') }}</button>

    {{ form_end(form) }}

</div>

